<?xml version="1.0" encoding="UTF-8"?>
<project name="lesscss" default="less" basedir=".">
    <property name="dir.project"
        value="/Users/rgfindley/Documents/work/workspace-juno/marineweather" />
    <property name="dir.css" value="${dir.project}/war/static/css" />
    <property name="lessc" value="/usr/local/bin/lessc" />
    <property name="pathToNode" value="/usr/local/bin" />
 
    <target name="less" description="Compile LESS files">
        <antcall target="lessfile">
            <param name="file.name" value="test" />
        </antcall>
        <antcall target="lessfile">
            <param name="file.name" value="test2" />
        </antcall>
    </target>
 
    <target name="lessfile">
        <exec executable="${lessc}" failonerror="true">
            <env key="PATH" value="${env.PATH}:${pathToNode}" />
            <arg line="-x ${dir.css}/${file.name}.less ${dir.css}/${file.name}.css" />
        </exec>
    </target>
</project>